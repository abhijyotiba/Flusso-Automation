# Flusso Workflow Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# FRESHDESK
# ==========================================
FRESHDESK_DOMAIN=your-company.freshdesk.com
FRESHDESK_API_KEY=your_freshdesk_api_key_here

# ==========================================
# PINECONE
# ==========================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=us-east-1
PINECONE_IMAGE_INDEX=flusso-vision-index
PINECONE_TICKETS_INDEX=freshdesk-support-tickets

# ==========================================
# GEMINI
# ==========================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_FILE_SEARCH_STORE_ID=your_file_search_store_id_here

# ==========================================
# OPENAI (Optional - for embeddings)
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# APPLICATION
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ==========================================
# CENTRALIZED LOGGING (Phases 1-3)
# ==========================================
# Client identification - unique identifier for this deployment
CLIENT_ID=client_unique_identifier

# Log collector API endpoint - your centralized logging server
LOG_COLLECTOR_URL=https://your-log-collector.com/api/v1/logs

# API key for authenticating with log collector
LOG_COLLECTOR_API_KEY=your_log_collector_api_key

# Enable/disable centralized logging
ENABLE_CENTRALIZED_LOGGING=true
# ==========================================
# SPARE PARTS PRICING (Google Drive)
# ==========================================
# Google Drive file ID for the spare parts pricing spreadsheet
# Extract from URL: https://docs.google.com/spreadsheets/d/{FILE_ID}/edit
SPARE_PARTS_SHEET_FILE_ID=your_google_drive_file_id_here

# How often to refresh the spare parts cache (in hours)
SPARE_PARTS_REFRESH_HOURS=24

# ==========================================
# DEALER DOMAINS (Google Drive)
# ==========================================
# Google Drive file ID for the dealer domains spreadsheet
# Used to identify if an email belongs to a dealer vs end customer
# Extract from URL: https://docs.google.com/spreadsheets/d/{FILE_ID}/edit
DEALER_DOMAINS_SHEET_FILE_ID=your_google_drive_file_id_here

# How often to refresh the dealer domains cache (in hours)
DEALER_DOMAINS_REFRESH_HOURS=24

# ==========================================
# GOOGLE SERVICE ACCOUNT (for Drive API)
# ==========================================
# Path to the service account JSON key file
# Required for accessing company Google Drive files
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ==========================================
# AGENT CONSOLE
# ==========================================
AGENT_CONSOLE_URL=https://your-agent-console-url.com